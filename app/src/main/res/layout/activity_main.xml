<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="@drawable/background"
    tools:context=".MusicPlayerActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:text="LEMONADE"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvArtist"
        android:text="Alexandra Stan"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:layout_marginBottom="10dp"
        android:textSize="11sp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/playerImg"
        android:src="@drawable/apple_music_note"
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:layout_height="250dp"/>

    <SeekBar
        android:id="@+id/seekBarTime"
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:progressTint="#fff"
        android:backgroundTint="#fff"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="00:00"/>

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="00:00"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnShuffle"
            android:background="@drawable/ic_shuffle_music"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="20dp"/>

        <Button
            android:id="@+id/btnBkd"
            android:background="@drawable/ic_baseline_music_previous"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btnPlay"
            android:background="@drawable/ic_baseline_play_circle"
            android:backgroundTint="#fff"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <Button
            android:id="@+id/btnFwd"
            android:background="@drawable/ic_baseline_music_next"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <Button
            android:id="@+id/btnLoopMusic"
            android:layout_marginStart="20dp"
            android:background="@drawable/ic_loop_music"
            android:layout_width="25dp"
            android:layout_height="25dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="290dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/volumeDown"
            android:src="@drawable/ic_baseline_volume_mute"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <SeekBar
            android:id="@+id/seekBarVolume"
            android:layout_marginTop="2dp"
            android:layout_width="250dp"
            android:progressTint="#fff"
            android:backgroundTint="#fff"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/volumeUp"
            android:src="@drawable/ic_baseline_volume_up_24"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/favBtn"
            android:background="@drawable/ic_outline_favorite_border_24"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>

</LinearLayout>